{

  "manifest_version": 2,
  "name": "Postey",
  "version": "1.0",

  "description": "Allows user to share a page to Facebook by right-clicking.",
  "homepage_url": "https://github.com/BrendanTWhite/Postey",

  "icons": {
    "32": "icons/postey-32.png",
    "48": "icons/postey-48.png",
    "96": "icons/postey-96.png"
  },


  "background": {
    "scripts": [
      "background.js"
    ]
  },

  "permissions": [
    "activeTab",
    "contextMenus",
    "tabs"
  ]

}
